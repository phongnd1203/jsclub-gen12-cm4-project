<!doctype html>
<html lang="en">
  <%- include('../../partials/head.ejs') %>
  <body>
    <%- include('../../partials/layouts/header.ejs') %>
    <!doctype html>
    <html lang="en">
      <%- include('../../partials/head.ejs') %>
      <body>
        <%- include('../../partials/scripts/pre-scripts.ejs') %>
        <%- include('../../partials/scripts/pre-scripts.ejs') %>
        <%- include('../../partials/layouts/header.ejs') %>
        <main class="page-wrapper">
          <!-- Hien anh nhung chua ejs -->
          <div id="carousel-sample" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carousel-sample" data-bs-slide-to="0" class="active"></button>
              <button type="button" data-bs-target="#carousel-sample" data-bs-slide-to="1"></button>
              <button type="button" data-bs-target="#carousel-sample" data-bs-slide-to="2"></button>
              <button type="button" data-bs-target="#carousel-sample" data-bs-slide-to="3"></button>
              <button type="button" data-bs-target="#carousel-sample" data-bs-slide-to="4"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" alt="" src="/samples/photos/city-lights-reflected-in-the-water-at-night.jpg" />
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" alt="" src="/samples/photos/color-palette-guide-sample-colors-catalog-.jpg" />
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" alt="" src="/samples/photos/finances-us-dollars-and-bitcoins-currency-money.jpg" />
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" alt="" src="/samples/photos/tropical-palm-leaves-floral-pattern-background.jpg" />
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" alt="" src="/samples/photos/young-woman-working-in-a-cafe.jpg" />
              </div>
            </div>
            <a class="carousel-control-prev" data-bs-target="#carousel-sample" role="button" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next" data-bs-target="#carousel-sample" role="button" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </a>
          </div>
          <!-- -- -->
          <div class="page-header d-print-none">
            <div class="container-xl">
              <div class="row g-2 align-items-center">
                <div class="col">
                  <h2 class="page-title"><%= house.title %></h2>
                  <div class="text-secondary mt-1">
                    <%- house.location.address %>
                  </div>
                </div>
                <% if (locals.user) { %>
                <div class="col-auto ms-auto d-print-none">
                  <% if ( locals.user._id.toString() === house.owner._id.toString())
                  { %>
                  <div class="d-flex">
                    <a
                      href="
                      <%= `/houses/${house._id}/edit` %>
                    "
                      class="btn btn-primary"
                    >
                      <%- include('../../partials/icons/edit.ejs') %>
                      <span> Chỉnh sửa </span>
                    </a>
                  </div>
                  <% } else { %>
                  <form
                    action="<%= `/houses/${house._id}/favorite` %>"
                    method="post"
                    class="d-flex"
                  >
                    <button
                      type="submit"
                      name="favorite"
                      value="true"
                      class="btn btn-primary"
                    >
                      <%- include('../../partials/icons/heart.ejs') %>
                      <span> Yêu thích </span>
                    </button>
                  </form>
                  <% } %>
                </div>
                <% } %>
              </div>
            </div>
          </div>
          <div class="page-body">
            <div class="container-xl">
              <div class="row row-card g-3">
                <div class="col">
                  <div class="card mb-3">
                    <div class="card-header">
                      <h3 class="card-title">Mô tả</h3>
                    </div>
                    <div class="card-body">
                      <p class="card-text"><%= house.description %></p>
                    </div>
                  </div>
                  <div class="card">
                    <div class="card-header">
                      <h3 class="card-title">Comments</h3>
                    </div>
                    <div class="card-body">
                      <div class="comment">
                        <div class="comment-author">
                          <h5>Author Name</h5>
                        </div>
                        <div class="comment-body">
                          <p>Comment text goes here...</p>
                        </div>
                      </div>
                      <div class="comment">
                        <div class="comment-author">
                          <h5>Author Name</h5>
                        </div>
                        <div class="comment-body">
                          <p>Comment text goes here...</p>
                        </div>
                      </div>
                      <!-- Repeat the 'comment' div for each comment -->
                    </div>
                  </div>
                  <div class="card mb-3">
                    <div class="card-header">
                      <h3 class="card-title">Bản đồ</h3>
                    </div>
                    <div class="card-body">
                      <div class="ratio ratio-16x9">
                        <iframe
                          style="border: 0"
                          loading="lazy"
                          allowfullscreen
                          referrerpolicy="no-referrer-when-downgrade"
                          src="
                          https://www.google.com/maps/embed/v1/place?key=<%= locals.maps.apiKey %>&q=<%= `${house.name}, ${house.location.address}` %>
                          "
                        >
                        </iframe>
                      </div>
                    </div>
                  </div>
                  <div class="mb-3 card"></div>
                </div>
                <div class="col-lg-4"></div>
              </div>
            </div>
          </div>
        </main>
        <%- include('../../partials/scripts/post-scripts.ejs') %>
      </body>
    </html>
      </body>
</html>
