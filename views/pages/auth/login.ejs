<!doctype html>
<html lang="vi">
  <%- include('../../partials/head.ejs') %>
  <body class="d-flex flex-column">
    <%- include('../../partials/scripts/pre-scripts.ejs') %>
    <div class="page page-center">
      <div class="container-tight container py-4">
        <div class="mb-4 text-center">
          <a href="/" class="navbar-brand navbar-brand-autodark">
            <img class="navbar-brand-image" />
          </a>
        </div>
        <form method="post" class="card card-md">
          <div class="card-body">
            <h2 class="h2 mb-4 text-center">Đăng nhập</h2>
            <div class="mb-3">
              <label class="form-label"> Địa chỉ email </label>
              <input
                type="email"
                id="email"
                name="email"
                tabindex="1"
                class="form-control"
                autocomplete="email"
              />
            </div>
            <div class="mb-2">
              <label class="form-label">
                Mật khẩu
                <span class="form-label-description">
                  <a href="/auth/forgot-password"> Quên mật khẩu? </a>
                </span>
              </label>
              <div class="input-group input-group-flat">
                <input
                  type="password"
                  id="password"
                  name="password"
                  tabindex="2"
                  class="form-control"
                  autocomplete="current-password"
                />
              </div>
            </div>
            <div class="form-footer">
              <button type="submit" class="btn btn-primary w-100">
                Tiếp tục
              </button>
            </div>
          </div>
        </form>
        <div class="text-secondary mt-3 text-center">
          Bạn chưa có tài khoản?
          <a href="/auth/register" tabindex="-1"> Đăng ký ngay </a>
        </div>
      </div>
    </div>
    <%- include('../../partials/scripts/post-scripts.ejs') %>
  </body>
</html>
