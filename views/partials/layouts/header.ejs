<header class="navbar navbar-expand-md d-print-none">
  <div class="container-xl">
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbar-menu"
      aria-controls="navbar-menu"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <h1
      class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3"
    >
      <a href="https://www.facebook.com/fu.jsclub">
        <img src="/images/icon.jpg" class="navbar-brand-image" />
      </a>
    </h1>
    <div class="navbar-nav flex-row order-md-last">
      <% if (locals.user) { %>
      <div class="nav-item dropdown">
        <a
          href="#"
          class="nav-link d-flex lh-1 text-reset p-0"
          data-bs-toggle="dropdown"
          aria-label="Open user menu"
        >
          <img class="avatar avatar-sm" />
          <div class="d-none d-xl-block ps-2">
            <div><%= locals.user.name %></div>
            <div class="small text-secondary text-capitalize mt-1">
              <%= locals.user.role %>
            </div>
          </div>
        </a>
        <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
          <a href="/user/profile" class="dropdown-item"> Trang cá nhân </a>
          <div class="dropdown-divider"></div>
          <a href="/auth/logout" class="dropdown-item"> Đăng xuất </a>
        </div>
      </div>
      <% } else { %>
      <div class="nav-item d-none d-md-flex me-3">
        <div class="btn-list">
          <a
            href="/auth/register"
            class="btn d-none d-lg-block"
            target="_blank"
            rel="noreferrer"
          >
            <span>Đăng ký</span>
          </a>
          <a
            href="/auth/login"
            class="btn btn-primary d-none d-lg-block"
            target="_blank"
            rel="noreferrer"
          >
            <span>Đăng nhập</span>
          </a>
        </div>
      </div>
      <% } %>
    </div>
    <div class="collapse navbar-collapse" id="navbar-menu">
      <div
        class="d-flex flex-column flex-md-row flex-fill align-items-stretch align-items-md-center"
      >
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">
              <span class="nav-link-title"> Trang chủ </span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/houses">
              <span class="nav-link-title"> Nhà trọ </span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
