<!doctype html>
<html lang="en">
    <%- include('../../partials/head.ejs') %>
    <body>
        <%- include('../../partials/layouts/header.ejs') %>
        <div class="page-wrapper">
            <div class="page-header d-print-none">
              <div class="container-xl">
                <div class="row g-2 align-items-center">
                  <div class="col">
                    <h2 class="page-title">
                      Account Settings
                    </h2>
                  </div>
                </div>
              </div>
            </div>
            <div class="page-body">
              <div class="container-xl">
                <div class="card">
                  <div class="row g-0">
                    <div class="col-12 col-md-3 border-end">
                      <div class="card-body">
                        <div class="list-group list-group-transparent">
                          <a href="#" class="list-group-item list-group-item-action d-flex align-items-center active">User's Account</a>
                          <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">User's Post</a>
                          <a href="#" class="list-group-item list-group-item-action d-flex align-items-center">User's Comment</a>
                        </div>
                      </div>
                    </div>
                    <div class="col-12 col-md-9 d-flex flex-column">
                      <div class="card-body">
                        <h2 class="mb-4">User's Account</h2>
                        <h3 class="card-title">Profile Details</h3>
                        <div class="row align-items-center">
                          <div class="col-auto"><span class="avatar avatar-xl" style="background-image: url(./static/avatars/000m.jpg)"></span>
                          </div>
                          <div class="col-auto"><a href="#" class="btn">
                              Change avatar
                            </a></div>
                          <div class="col-auto"><a href="#" class="btn btn-ghost-danger">
                              Delete avatar
                            </a></div>
                        </div>
                        <div class="row g-3">
                          <div class="col-md">
                            <div class="form-label">UserName</div>
                            <textarea type="text" class="form-control" value="<%= locals.user.name %>">
                                <%= locals.user.name %>
                            </textarea>
                          </div>
                          <div class="col-md">
                            <div class="form-label">User ID</div>
                            <textarea type="text" class="form-control" value="<%= locals.user.id %>">
                                <%= locals.user.id %>
                            </textarea>
                          </div>
                          <div class="col-md">
                            <div class="form-label">Phone Number</div>
                            <textarea type="text" class="form-control" value="<%= locals.user.phone %>">
                                <%= locals.user.phone %>
                            </textarea>
                          </div>
                        </div>
                        <h3 class="card-title mt-4"> User Email</h3>
                        <div>
                          <div class="row g-2">
                            <div class="col-auto">
                              <textarea type="text" class="form-control w-auto" value="<%= locals.user.email %>">
                                <%= locals.user.email %>
                                </textarea>
                            </div>
                            <div class="col-auto"><a href="#" class="btn">
                                Change
                              </a></div>
                          </div>
                        </div>
                        <h3 class="card-title mt-4">Password</h3>
                        <div>
                          <a href="#" class="btn">
                            Set new password
                          </a>
                          <textarea type="password" class="form-control w-auto" value="<%= locals.user.password %>">
                            <%= locals.user.password %>
                            </textarea>
                      <div class="card-footer bg-transparent mt-auto">
                        <div class="btn-list justify-content-end">
                            <button>
                                <a href="#" class="btn">
                                    Delete
                                </a>
                            </button>
                            <button>
                                <a href="#" class="btn btn-primary">
                                    Submit
                                </a>
                            </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div> 
    </body>
</html>