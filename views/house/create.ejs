<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <main>
      <h1>Create Room</h1>
      <% if (locals.errors) { %>
      <ul>
        <% for (let error of locals.errors) { %>
        <li><%= JSON.stringify(error) %></li>
        <% } %>
      </ul>
      <% } %>
      <form method="post">
        <div>
          <label for="name">Tên trọ</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            autocomplete="name"
          />
        </div>
        <div>
          <label for="description">Nhập mô tả</label>
          <input
            type="description"
            id="description"
            name="description"
            required
          />
        </div>
        <div>
          <label for="address">Địa chỉ</label>
          <input
            type="tel"
            id="address"
            name="address"
            required
            autocomplete="tel"
          />
        </div>
        <div>
          <input type="hidden" name="districtCode" value="1" />
        </div>
        <div>
          <label for="price">Giá </label>
          <input
            type="number"
            id="price"
            name="price"
            required
            autocomplete="new-price"
          />
        </div>
        <div>
          <label for="size">Kích thước(m2)</label>
          <input type="number" id="area" name="area" required />
        </div>
        <button type="submit">Xác nhận</button>
      </form>
    </main>
  </body>
</html>
